{
    "name": "keboola/provisioning-client",
    "description": "Keboola Provisioning Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "autoload": {
        "psr-0": {
            "Keboola\\Provisioning": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "doctrine/orm": "~2.3.0",
        "keboola/storage-api-client": "~4.11.0"
    },
    "require": {
        "guzzle/guzzle": "~3.7",
        "keboola/syrup-php-client": "^5.2"
    },
    "scripts": {
        "tests": "composer install --prefer-dist --no-interaction && ./vendor/bin/phpunit",
        "build": [
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    }
}
